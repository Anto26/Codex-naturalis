<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Pane?>

<StackPane styleClass="main-container" id="pane" fx:controller="it.polimi.ingsw.client.frontend.gui.scenes.LobbySceneController" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" VBox.vgrow="always" maxHeight="-Infinity" maxWidth="600" styleClass="connection-box">
        <Label alignment="TOP_CENTER" text="Join a match" styleClass="title"/>
        <ScrollPane fx:id="lobbyScrollPane" hbarPolicy="NEVER" fitToWidth="true" maxHeight="250">
            <VBox fx:id="matchContainer" VBox.vgrow="ALWAYS" alignment="CENTER">
                <HBox styleClass="lobby-card">
                    <Label text="Match Name" styleClass="lobby-title" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Label text="2/4" styleClass="lobby-title" />
                    <Pane prefWidth="5"/>
                    <RadioButton styleClass="radio" alignment="CENTER"/>
                </HBox>
            </VBox>
        </ScrollPane>
        <VBox>
            <Label styleClass="input-label" text="Username"/>
            <HBox spacing="20">
                <TextField fx:id="joinUsername" styleClass="input" text="Oingo" maxWidth="500" alignment="CENTER"/>
                <Button fx:id="joinButton" text="Join" styleClass="smallbutton" alignment="CENTER"></Button>
            </HBox>
        </VBox>
        <Pane prefHeight="20"/>
        <Label alignment="TOP_CENTER" text="Create a match" styleClass="title"/>
        <VBox>
            <Label styleClass="input-label" text="Username"/>
            <TextField fx:id="createUsername" styleClass="input" text="Oingo" maxWidth="500" alignment="CENTER"/>
            <Label styleClass="input-label" text="Match Name"/>
            <TextField fx:id="matchName" styleClass="input" text="Oingo" maxWidth="500" alignment="CENTER"/>
            <Pane prefHeight="10"/>
            <HBox spacing="5" alignment="CENTER" fx:id="matchNumberContainer">
                <RadioButton text="2" styleClass="radio" selected="true"/>
                <RadioButton text="3" styleClass="radio" />
                <RadioButton text="4" styleClass="radio" />
            </HBox>
            <Pane prefHeight="10"/>
            <HBox alignment="CENTER"><Button fx:id="createButton" text="Create Match" styleClass="smallbutton" alignment="CENTER" /></HBox>
        </VBox>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </VBox>
</StackPane>
