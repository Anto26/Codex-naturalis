            <children>
                <CardView fx:id="handCard1" />
                <CardView fx:id="handCard2" />
                <CardView fx:id="handCard3" />
            </children>
            <StackPane.margin>
                <Insets>
                    <bottom>100</bottom>
                </Insets>
            </StackPane.margin>
        </HBox>
    </StackPane>
</Tab>
