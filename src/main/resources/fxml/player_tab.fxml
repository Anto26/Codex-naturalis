<Tab fx:controller="it.polimi.ingsw.client.frontend.gui.scenes.PlayerTabController" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane prefHeight="150.0" prefWidth="200.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>
        <ScrollPane fx:id="scroll" StackPane.alignment="CENTER" hvalue="0.51" vvalue="0.53" styleClass="scrollboard">
